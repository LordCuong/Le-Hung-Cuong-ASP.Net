                <a class="dropdown-item" @Html.ActionLink("Giỏ hàng", "Shoppingcart", "Cart", new { }, null)</a>
                <a class="dropdown-item" @Html.ActionLink("Thông tin nội dung", "Content", "Home", new { }, null)</a>
                <a class="dropdown-item" @Html.ActionLink("Trang đăng nhập", "Login", "Home", new { }, null)</a>
