@model LeHungCuong_2122110266.Context.Category

@{
    ViewBag.Title = "Details";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Danh mục</h3>
        </div>
        <div class="card-body">
            <h4 class="text-muted">Chi tiết</h4>
            <hr />
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                        <dt class="col-sm-4">Avatar</dt>
                        <dd class="col-sm-8">
                            <img src="@Url.Content("~/Content/images/items/" + Model.Image)" alt="Category Avatar" class="img-fluid rounded" />
                        </dd>

                        <dt class="col-sm-4">Slug</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Slug)</dd>
                    </dl>
                </div>

                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Show on Homepage</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ShowOnHomePage)</dd>

                        <dt class="col-sm-4">Display Order</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.DisplayOrder)</dd>
                    </dl>
                </div>
            </div>

            <h4 class="text-muted mt-4">Additional Information</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">Deleted</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Deleted)</dd>

                <dt class="col-sm-3">Created On</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedAt)</dd>

                <dt class="col-sm-3">Updated On</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.UpdatedAt)</dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            @Html.ActionLink("CHỉnh sữa", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary me-2" })
            @Html.ActionLink("quay về", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
</div>
